<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ItemFragment">

    <TextView
        android:id="@+id/item_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/text_margin_top"
        android:text="@string/id"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_text_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toBottomOf="@id/item_id_title"
        app:layout_constraintStart_toEndOf="@id/item_id_title"
        app:layout_constraintTop_toTopOf="@id/item_id_title" />

    <TextView
        android:id="@+id/item_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/text_margin_top"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_id_title" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_text_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintStart_toEndOf="@id/item_name_title"
        app:layout_constraintTop_toTopOf="@id/item_name_title" />

    <TextView
        android:id="@+id/item_description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/text_margin_top"
        android:text="@string/description"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_name_title" />

    <TextView
        android:id="@+id/item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin_top"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="@dimen/default_text_size"
        android:breakStrategy="balanced"
        app:layout_constraintTop_toBottomOf="@id/item_description_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>